{% extends 'base.html.twig' %}

{% block title %}VISITEUR - CREATION DE COMPTE{% endblock %}

{% block body %}

  <div class="container-fluid min-vh-100" style="background-image: url('{{ asset('cle.jpg') }}');
    background-attachment: fixed; background-size: cover; background-position: center center; opacity: 0.8">

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="text-center mt-5 p-5" style="font-family: 'Montserrat';">Je cr√©e mon compte</h1>

    <div class="col-4 text-center border border-light mt-5 p-5 mx-auto" style="background-color:#E5E5E5FF">

        {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm.titre) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.username, {label: 'Pseudo'}) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.adresse) }}
            {{ form_row(registrationForm.ville) }}
            {{ form_row(registrationForm.codePostal) }}
            {{ form_row(registrationForm.telephone) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button class="btn btn-md btn-info" style="border-radius: 10px">Valider</button>
        {{ form_end(registrationForm) }}

    </div>

  </div>

{% endblock %}
