{% extends 'base.html.twig' %}

{% block title %}Bien{% endblock %}

{% block body %}

    <div class="container mt-3">

        <h1 class="my-3">{{ bien.titre }}</h1>

        <table class="table">
            <tbody>

                <tr>
                    <th style="vertical-align: middle;">Titre</th>
                    <td>{{ bien.titre }}</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle;">Type</th>
                    <td>{{ bien.type }}</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle;">Categorie</th>
                    <td>{{ bien.categorie }}</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle;">Description</th>
                    <td>{{ bien.description }}</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle;">Prix</th>
                    <td>{{ bien.prix }}</td>
                </tr>
                <tr>
                    <th style="vertical-align: middle;">Photo</th>
                    <td><img src="{{ vich_uploader_asset(bien, 'photoFile') }}"></td>
                </tr>
                {%if is_granted('ROLE_USER')%}
                <tr>
                    <th style="vertical-align: middle;">Actions</th>
                    <td>
                        <a class="btn btn-md btn-warning" style="border-radius: 10px" href="{{ path('bien_edit', {'id': bien.id}) }}">Modifier le bien</a>

                        {{ include('bien/_delete_form.html.twig') }}
                    </td>
                </tr>
                {% endif %}
            </tbody>
        </table>

        <div class="row text-center">
            <div class="col-12">
                
               <a class="btn btn-md btn-info mt-3" style="border-radius: 10px" href="{{ path('bien_index') }}">Retour Ã  la liste</a>
            </div>
        </div>
    </div>

{% endblock %}
