{% extends 'base.html.twig' %}

{% block title %}ADMIN - Détail d'un utilisateur{% endblock %}

{% block body %}

  <div class="container-fluid min-vh-100" style="background-image: url('{{ asset('cle.jpg') }}');
    background-attachment: fixed; background-size: cover; background-position: center center; opacity: 0.8">

    <h1 class="text-center mt-5 p-5" style="font-family: 'Montserrat';">Détail du compte de {{ user.prenom }}</h1>

    <ul class="list-group mt-5 col-6 mx-auto">
        <li class="list-group-item active">{{user.titre}} {{user.nom}} {{user.prenom }}</li>
        <li class="list-group-item">Pseudo: {{ user.username }}</li>
        <li class="list-group-item">Id: {{user.id}} </li>
        <li class="list-group-item">Rôle: {{ user.roles ? user.roles|json_encode : '' }}</li>
        <li class="list-group-item">Email: {{ user.email }}</li>
        <li class="list-group-item">Adresse: {{ user.adresse }}</li>
        <li class="list-group-item">Ville: {{ user.ville }}</li>
        <li class="list-group-item">Code postale: {{ user.codepostal }}</li>
        <li class="list-group-item">Téléphone: {{ user.telephone }}</li>
    </ul>

    <div class="col-4 mx-auto">
        <div class="btn-group" role="group" aria-label="Basic example">
            <a class="btn btn-md btn-info m-3" style="border-radius: 10px" href="{{ path('user_index') }}">Retour à la liste</a>
            <a class="btn btn-md btn-warning m-3" style="border-radius: 10px" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
